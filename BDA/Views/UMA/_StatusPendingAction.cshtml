@model BDA.ViewModel.UMAViewModel

@if (Model?.Status == "Submitted" || Model?.Status == "Processing")
{
    <div class="alert alert-info" role="alert">
        <h4 class="alert-heading">Pending Action Required</h4>
        <p>This UMA request is currently pending approval. Please review the details and take the necessary action.</p>
        <hr>
        <p class="mb-0">Status: <strong>@Model.Status</strong></p>
        @if (!string.IsNullOrEmpty(Model.Comment))
        {
            <p class="mb-0">Last Comment: @Model.Comment</p>
        }
    </div>
}
else if (Model?.Status == "Approved")
{
    <div class="alert alert-success" role="alert">
        <h4 class="alert-heading">Approved</h4>
        <p>This UMA request has been approved and is ready for processing.</p>
        <hr>
        <p class="mb-0">Status: <strong>@Model.Status</strong></p>
    </div>
}
else if (Model?.Status == "Rejected")
{
    <div class="alert alert-danger" role="alert">
        <h4 class="alert-heading">Rejected</h4>
        <p>This UMA request has been rejected. Please review the comments and resubmit if necessary.</p>
        <hr>
        <p class="mb-0">Status: <strong>@Model.Status</strong></p>
        @if (!string.IsNullOrEmpty(Model.Comment))
        {
            <p class="mb-0">Rejection Reason: @Model.Comment</p>
        }
    </div>
}
else if (Model?.Status == "Completed")
{
    <div class="alert alert-success" role="alert">
        <h4 class="alert-heading">Completed</h4>
        <p>This UMA request has been completed successfully.</p>
        <hr>
        <p class="mb-0">Status: <strong>@Model.Status</strong></p>
    </div>
}