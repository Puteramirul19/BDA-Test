@model BDA.ViewModel.UMAViewModel
@{
    ViewData["Title"] = "UMA Request";
    var status = Model.Status;
    var userId = ViewBag.UserId;
}

@section Styles {
    <link rel="stylesheet" href="~/assets/css/bootstrap-select/bootstrap-select.min.css">
    <style>
    </style>
}

<div class="content-inner active">
    <div class="container-fluid">
        <!-- Begin Page Header-->
        <div class="row">
            <div class="page-header">
                <div class="d-flex align-items-center">
                    <h2 class="page-header-title">UMA Request</h2>
                    <div>
                        <ul class="breadcrumb">
                            <li class="breadcrumb-item"><a href="/UMA/BankDraftList"><i class="ti ti-home"></i></a></li>
                            <li class="breadcrumb-item"><a href="#">UMA Application</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <!-- End Page Header -->
        <div class="row flex-row">
            <div class="col-xl-12">
                <!-- Form -->
                <div class="widget has-shadow">
                    <div class="widget-body">
                        <div class="row flex-row justify-content-center">
                            <div class="col-xl-12">
                                <div id="rootwizard">
                                    @Html.Partial("_StatusBar.cshtml")
                                    <div class="tab-content" style="font-family: Arial">
                                        <div class="body-content">
                                            <div class="widget has-shadow">
                                                <div class="widget-body sliding-tabs">
                                                    <ul class="nav nav-tabs form-tab" id="ul-form-tab" role="tablist">
                                                        <li class="nav-item">
                                                            <a class="nav-link @(status == "Draft" || status == "Submitted" || status == "Rejected" || status == "Declined" || status == "Withdrawn" ? "active" : "")" id="base-tab-1" data-toggle="tab" href="#tab-1" role="tab" aria-controls="tab-1" aria-selected="true">Create Details</a>
                                                        </li>
                                                        <li class="nav-item">
                                                            <a class="nav-link @(status == "Approved" || status == "Accepted" ? "active" : "")" id="base-tab-2" data-toggle="tab" href="#tab-2" role="tab" aria-controls="tab-2" aria-selected="false">Process Details</a>
                                                        </li>
                                                        <li class="nav-item">
                                                            <a class="nav-link @(status == "Processed" || status == "Received" || status == "Confirmed" || status == "Completed" ? "active" : "")" id="base-tab-3" data-toggle="tab" href="#tab-3" role="tab" aria-controls="tab-3" aria-selected="false">Receive Details</a>
                                                        </li>
                                                    </ul>
                                                    <div class="tab-content pt-3">
                                                        <div class="tab-pane fade @(status == "Draft" || status == "Submitted" || status == "Rejected" || status == "Declined" || status == "Withdrawn" ? "active show" : "")" id="tab-1" role="tabpanel" aria-labelledby="base-tab-1">
                                                            @using (Html.BeginForm("NextAction", "UMA", Model, FormMethod.Post, false, new { @id = "formNextAction", @class = "form-horizontal" }))
                                                            {
                                                                @Html.AntiForgeryToken()
                                                                @Html.HiddenFor(x => x.Status)
                                                                @Html.HiddenFor(x => x.UserAction)
                                                                @Html.Partial("_CreateDetails.cshtml")
                                                                @Html.Partial("_Document.cshtml")
                                                                @Html.Partial("_ApproverList.cshtml")

                                                                if (status != "Draft")
                                                                {
                                                                    @Html.Partial("_ActionHistory.cshtml")
                                                                }

                                                                if (status == "Draft")
                                                                {
                                                                    @Html.Partial("_Comment.cshtml")
                                                                }
                                                            }
                                                            @using (Html.BeginForm("NextAction", "UMA", Model, FormMethod.Post, false, new { @id = "formNextAction", @class = "form-horizontal" }))
                                                            {
                                                                if (((status == "Submitted" || status == "Rejected" || status == "Declined" || status == "Withdrawn") && Model.RequesterId == userId))
                                                                {
                                                                    @Html.HiddenFor(x => x.UserAction)
                                                                    @Html.HiddenFor(x => x.Id)
                                                                    @Html.HiddenFor(x => x.Comment)
                                                                    <div class="widget has-shadow">
                                                                        <div class="widget-body">
                                                                            <div class="padding-left-20 padding-right-20">
                                                                                <div class="form-group row">
                                                                                    <div class="col-sm-12" style="text-align:center">
                                                                                        @if (status == "Rejected" || status == "Declined")
                                                                                        {
                                                                                            <button type="button" id="btnResubmit" class="btn btn-primary">Resubmit</button>
                                                                                        }
                                                                                        @if (status == "Submitted")
                                                                                        {
                                                                                            <button type="button" id="btnWithdraw" class="btn btn-warning">Withdraw</button>
                                                                                        }
                                                                                    </div>
                                                                                </div>
                                                                            </div>
                                                                        </div>
                                                                    </div>
                                                                }
                                                            }
                                                        </div>
                                                        <div class="tab-pane fade @(status == "Approved" || status == "Accepted" ? "active show" : "")" id="tab-2" role="tabpanel" aria-labelledby="base-tab-2">
                                                            <!-- Process Details Content -->
                                                        </div>
                                                        <div class="tab-pane fade @(status == "Processed" || status == "Received" || status == "Confirmed" || status == "Completed" ? "active show" : "")" id="tab-3" role="tabpanel" aria-labelledby="base-tab-3">
                                                            <!-- Receive Details Content -->
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            var counter2 = 0;
            $("#btnAddOtherDoc").click(function (e) {
                e.preventDefault();
                $("#pnlOtherDoc").append('<div id="pnlOtherDoc' + counter2 + '" class="row">' +
                    '<div class="col-sm-4">' +
                    '<input type="text" name="OthersDocName" class="form-control" placeholder="Document Name" />' +
                    '</div>' +
                    '<div class="col-sm-6">' +
                    '<input type="file" id="otherDoc' + counter2 + 'Id" name="OthersDoc" class="form-control" accept="image/*,.pdf" />' +
                    '</div>' +
                    '<div class="col-sm-2">' +
                    '<button type="button" class="btn btn-danger" onclick="RemoveOtherDoc(' + counter2 + ')">Remove</button>' +
                    '</div>' +
                    '</div>');
                counter2++;
            });

            function RemoveOtherDoc(id) {
                $("#pnlOtherDoc" + id).remove();
            }

            $("#formEditUMA").submit(function (e) {
                e.preventDefault();
                ShowNoty("warning", "Saving UMA Request..");

                var form = $(this);
                var url = form.attr('action');
                var fdata = new FormData();

                if ($('#ScannedPoliceReport').get(0).files.length !== 0) {
                    var fileInput = $('#ScannedPoliceReport')[0];
                    var file = fileInput.files[0];
                    fdata.append("ScannedPoliceReport", file);
                }

                if ($('#ScannedPBTDoc').get(0).files.length !== 0) {
                    var fileInput = $('#ScannedPBTDoc')[0];
                    var file = fileInput.files[0];
                    fdata.append("ScannedPBTDoc", file);
                }

                $("input[name='OthersDoc']").each(function (i, file) {
                    if (file.files.length > 0) {
                        fdata.append("OthersDoc", file.files[0]);
                    }
                });

                $("input[name='OthersDocName']").each(function (i, input) {
                    fdata.append("OthersDocName", $(input).val());
                });

                $("input, select, textarea").not("input[type='file']").each(function (x, y) {
                    fdata.append($(y).attr("name"), $(y).val());
                });

                $.ajax({
                    type: "POST",
                    url: url,
                    data: fdata,
                    processData: false,
                    contentType: false,
                    success: function (data) {
                        if (data.response.statusCode == 200) {
                            ShowNoty("success", data.message);
                            href = "/UMA/BankDraftList";
                            setTimeout(function () {
                                window.location.href = href;
                            }, 1000);
                        } else {
                            ShowNoty("error", data.message);
                        }
                    }
                });
            });

            $("#btnResubmit").on('click', function (e) {
                $("#UserAction").val("Resubmit");
                $("#formNextAction").submit();
            });

            $("#btnWithdraw").on('click', function (e) {
                $("#UserAction").val("Withdrawn");
                $("#formNextAction").submit();
            });

            $("#formNextAction").submit(function (e) {
                e.preventDefault();
                ShowNoty("warning", "Processing request..");

                var form = $(this);
                var url = form.attr('action');

                $.ajax({
                    type: "POST",
                    url: url,
                    data: form.serialize(),
                    success: function (data) {
                        if (data.response.statusCode == 200) {
                            ShowNoty("success", data.message);
                            href = "/UMA/BankDraftList";
                            setTimeout(function () {
                                window.location.href = href;
                            }, 1000);
                        } else {
                            ShowNoty("error", data.message);
                        }
                    }
                });
            });
        });

        function RemoveOtherDoc(id) {
            $("#pnlOtherDoc" + id).remove();
        }
    </script>
}