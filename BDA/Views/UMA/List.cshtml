@{
    ViewData["Title"] = "Manage UMA";
}

@section Styles {
    <style>
        .btn-create {
            background-color: #5d5386;
            color: white;
        }

        .btn-apply:hover {
            background-color: white;
            color: black;
        }

        .btn-cancel:hover {
            background-color: red;
            color: white;
        }

        .btn-recover:hover {
            background-color: limegreen;
            color: white;
        }

        .btn-lost:hover {
            background-color: #FFC300;
            color: white;
        }

        select.filter {
            height: 33px !important;
        }
    </style>
}

<div class="content-inner">
    <div class="container-fluid">
        <!-- Begin Page Header-->
        <div class="row">
            <div class="page-header">
                <div class="d-flex align-items-center">
                    <h2 class="page-header-title">Manage UMA Application</h2>
                </div>
            </div>
        </div>
        <!-- End Page Header -->

        <div class="row flex-row">
            <div class="col-xl-12">
                <!-- Form -->
                <div class="widget has-shadow">
                    <div class="widget-body">
                        <div class="widget-body sliding-tabs">
                            <ul class="nav nav-tabs form-tab" id="ul-form-tab" role="tablist">
                                <li class="nav-item">
                                    <a class="nav-link active" id="base-tab-1" data-toggle="tab" href="#tab-1" role="tab" aria-controls="tab-1" aria-selected="true">In Progress</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" id="base-tab-2" data-toggle="tab" href="#tab-2" role="tab" aria-controls="tab-2" aria-selected="false">Completed</a>
                                </li>
                            </ul>
                            <div class="tab-content pt-3">
                                <div class="tab-pane fade active show" id="tab-1" role="tabpanel" aria-labelledby="base-tab-1">
                                    <!-- Content for In Progress tab -->
                                    <div class="table-responsive">
                                        <table class="table table-striped" id="table_uma_progress">
                                            <thead>
                                                <tr>
                                                    <th>Ref No</th>
                                                    <th>BD No</th>
                                                    <th>Project No</th>
                                                    <th>Name on BD</th>
                                                    <th>Requester</th>
                                                    <th>Co Code</th>
                                                    <th>BA</th>
                                                    <th>BD Amount</th>
                                                    <th>Status</th>
                                                    <th>Action Needed</th>
                                                    <th>Action</th>
                                                </tr>
                                            </thead>
                                        </table>
                                    </div>
                                </div>
                                <div class="tab-pane fade" id="tab-2" role="tabpanel" aria-labelledby="base-tab-2">
                                    <!-- Content for Completed tab -->
                                    <div class="table-responsive">
                                        <table class="table table-striped" id="table_uma_completed">
                                            <thead>
                                                <tr>
                                                    <th>Ref No</th>
                                                    <th>BD No</th>
                                                    <th>Project No</th>
                                                    <th>Name on BD</th>
                                                    <th>Requester</th>
                                                    <th>Co Code</th>
                                                    <th>BA</th>
                                                    <th>BD Amount</th>
                                                    <th>Status</th>
                                                    <th>Action</th>
                                                </tr>
                                            </thead>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#table_uma_progress').DataTable({
                "ajax": {
                    url: "@Url.Action("GetAllUMAByStatus", "UMA")",
                    type: "GET",
                    data: function (d) {
                        d._Status = "In Progress";
                    },
                    dataFilter: function (result) {
                        var jData = JSON.parse(result);
                        var dtData = JSON.stringify({ "data": jData });
                        return dtData;
                    }
                },
                order: [[1, 'asc']],
                columns: [
                    { data: "refNo" },
                    { data: "bdNo" },
                    { data: "projNo" },
                    { data: "nameOnBD" },
                    { data: "requester" },
                    { data: "compCode" },
                    { data: "ba" },
                    { data: "bdAmount" },
                    { data: "Status" },
                    { data: "actionNeeded" },
                    {
                        data: "id",
                        "render": function (data, type, row) {
                            var id = data;
                            var href = "/UMA/Edit/" + id;
                            if (type == "display") {
                                data = '<a href="' + href + '" style="border-radius: 0%;background-color: #f4f4f4;border-color: #ddd;" class="btn btn-lost btn-block mb-2">View</a>';
                            }
                            return data;
                        }
                    }
                ],
                "bPaginate": true,
                "bLengthChange": false,
                "bFilter": false,
                "bInfo": true,
                "bAutoWidth": false,
                orderCellsTop: true,
                fixedHeader: true,
                "lengthChange": false
            });

            $('#table_uma_completed').DataTable({
                "ajax": {
                    url: "@Url.Action("GetAllUMAByStatus", "UMA")",
                    type: "GET",
                    data: function (d) {
                        d._Status = "Completed";
                    },
                    dataFilter: function (result) {
                        var jData = JSON.parse(result);
                        var dtData = JSON.stringify({ "data": jData });
                        return dtData;
                    }
                },
                order: [[1, 'asc']],
                columns: [
                    { data: "refNo" },
                    { data: "bdNo" },
                    { data: "projNo" },
                    { data: "nameOnBD" },
                    { data: "requester" },
                    { data: "compCode" },
                    { data: "ba" },
                    { data: "bdAmount" },
                    { data: "Status" },
                    {
                        data: "id",
                        "render": function (data, type, row) {
                            var id = data;
                            var href = "/UMA/Edit/" + id;
                            if (type == "display") {
                                data = '<a href="' + href + '" style="border-radius: 0%;background-color: #f4f4f4;border-color: #ddd;" class="btn btn-lost btn-block mb-2">View</a>';
                            }
                            return data;
                        }
                    }
                ],
                "bPaginate": true,
                "bLengthChange": false,
                "bFilter": false,
                "bInfo": true,
                "bAutoWidth": false,
                orderCellsTop: true,
                fixedHeader: true,
                "lengthChange": false
            });
        });
    </script>
}