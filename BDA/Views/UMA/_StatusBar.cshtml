@{
    var currentStep = 1;
    if (Model != null)
    {
        switch (Model.Status)
        {
            case "Draft":
            case "Submitted":
                currentStep = 1;
                break;
            case "Approved":
                currentStep = 2;
                break;
            case "Accepted":
                currentStep = 3;
                break;
            case "Processed":
                currentStep = 4;
                break;
            case "Received":
            case "Confirmed":
            case "Completed":
                currentStep = 5;
                break;
        }
    }
}

<div class="widget has-shadow">
    <div class="widget-body">
        <div class="row">
            <div class="col-xl-12">
                <div style="text-align:center; margin-bottom:20px">
                    <h4>UMA Stages</h4>
                </div>
                <div class="progress-indicator">
                    <div class="step @(currentStep >= 1 ? "completed" : "")">
                        <div class="step-icon">1</div>
                        <div class="step-text">
                            <strong>Create</strong><br />
                            <small>(CM - TGBS)</small>
                        </div>
                    </div>
                    <div class="step @(currentStep >= 2 ? "completed" : "")">
                        <div class="step-icon">2</div>
                        <div class="step-text">
                            <strong>Submit to Bank</strong><br />
                            <small>(CM - TGBS)</small>
                        </div>
                    </div>
                    <div class="step @(currentStep >= 3 ? "completed" : "")">
                        <div class="step-icon">3</div>
                        <div class="step-text">
                            <strong>Submit to ANM</strong><br />
                            <small>(CM - TGBS)</small>
                        </div>
                    </div>
                    <div class="step @(currentStep >= 4 ? "completed" : "")">
                        <div class="step-icon">4</div>
                        <div class="step-text">
                            <strong>Incoming Payment</strong><br />
                            <small>(CM - TGBS)</small>
                        </div>
                    </div>
                    <div class="step @(currentStep >= 5 ? "completed" : "")">
                        <div class="step-icon">5</div>
                        <div class="step-text">
                            <strong>Completed</strong>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>