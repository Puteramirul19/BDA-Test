@model BDA.ViewModel.UMAViewModel

<div class="widget-header d-flex align-items-center" aria-expanded="true">
    <h3>Status: @(Model?.Status ?? "Draft")</h3>
</div>

<div class="progress-bar-container">
    <div class="progress-bar-wrapper">
        <div class="progress-bar">
            <div class="progress-step @(Model?.Status == "Draft" || Model?.Status == "Submitted" || Model?.Status == "Processing" || Model?.Status == "Approved" || Model?.Status == "Completed" ? "active" : "")">
                <div class="progress-step-number">1</div>
                <div class="progress-step-label">Draft</div>
            </div>
            <div class="progress-step @(Model?.Status == "Submitted" || Model?.Status == "Processing" || Model?.Status == "Approved" || Model?.Status == "Completed" ? "active" : "")">
                <div class="progress-step-number">2</div>
                <div class="progress-step-label">Submitted</div>
            </div>
            <div class="progress-step @(Model?.Status == "Processing" || Model?.Status == "Approved" || Model?.Status == "Completed" ? "active" : "")">
                <div class="progress-step-number">3</div>
                <div class="progress-step-label">Processing</div>
            </div>
            <div class="progress-step @(Model?.Status == "Approved" || Model?.Status == "Completed" ? "active" : "")">
                <div class="progress-step-number">4</div>
                <div class="progress-step-label">Approved</div>
            </div>
            <div class="progress-step @(Model?.Status == "Completed" ? "active" : "")">
                <div class="progress-step-number">5</div>
                <div class="progress-step-label">Completed</div>
            </div>
        </div>
    </div>
</div>

<style>
    .progress-bar-container {
        margin: 20px 0;
    }

    .progress-bar-wrapper {
        display: flex;
        justify-content: center;
    }

    .progress-bar {
        display: flex;
        align-items: center;
        position: relative;
        width: 100%;
        max-width: 600px;
    }

    .progress-step {
        display: flex;
        flex-direction: column;
        align-items: center;
        flex: 1;
        position: relative;
    }

        .progress-step:not(:last-child)::after {
            content: '';
            position: absolute;
            top: 15px;
            left: 50%;
            width: 100%;
            height: 2px;
            background-color: #e0e0e0;
            z-index: 1;
        }

        .progress-step.active:not(:last-child)::after {
            background-color: #007bff;
        }

    .progress-step-number {
        width: 30px;
        height: 30px;
        border-radius: 50%;
        background-color: #e0e0e0;
        color: #666;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: bold;
        position: relative;
        z-index: 2;
    }

    .progress-step.active .progress-step-number {
        background-color: #007bff;
        color: white;
    }

    .progress-step-label {
        margin-top: 8px;
        font-size: 12px;
        text-align: center;
        color: #666;
    }

    .progress-step.active .progress-step-label {
        color: #007bff;
        font-weight: bold;
    }
</style>