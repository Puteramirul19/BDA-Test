@{
    var currentStep = 1;
    if (Model != null)
    {
        switch (Model.Status)
        {
            case "Draft":
            case "Submitted":
                currentStep = 1;
                break;
            case "Approved":
                currentStep = 2;
                break;
            case "Accepted":
                currentStep = 3;
                break;
            case "Processed":
                currentStep = 4;
                break;
            case "Received":
            case "Confirmed":
            case "Completed":
                currentStep = 5;
                break;
        }
    }
}

<div class="status-bar has-shadow text-center">
    <div class="status-header">
        <span>UMA Stages</span>
    </div>
    <div class="step-container">
        <div class="step-wizard">
            <div class="progress">
                <div class="progressbar"></div>
            </div>
            <ul class="five">
                <li>
                    <a id="li-1" class="not-clickable @(currentStep >= 1 ? "active" : "")" data-toggle="tab" href="#">
                        <span class="step">1</span>
                        <span class="title">Create <br /><p style="font-size:12px;font-style:italic">(CM - TGBS)</p></span>
                    </a>
                </li>
                <li>
                    <a id="li-2" class="not-clickable @(currentStep >= 2 ? "active" : "")" data-toggle="tab" href="#" title="Submit to Bank">
                        <span class="step">2</span>
                        <span class="title">Submit to Bank <br /><p style="font-size:12px;font-style:italic">(CM - TGBS)</p></span>
                    </a>
                </li>
                <li>
                    <a id="li-3" class="not-clickable @(currentStep >= 3 ? "active" : "")" data-toggle="tab" href="#">
                        <span class="step">3</span>
                        <span class="title">Submit to ANM <br /><p style="font-size:12px;font-style:italic">(CM - TGBS)</p></span>
                    </a>
                </li>
                <li>
                    <a id="li-4" class="not-clickable @(currentStep >= 4 ? "active" : "")" data-toggle="tab" href="#">
                        <span class="step">4</span>
                        <span class="title">Incoming Payment <br /><p style="font-size:12px;font-style:italic">(CM - TGBS)</p></span>
                    </a>
                </li>
                <li>
                    <a id="li-5" class="not-clickable @(currentStep >= 5 ? "active" : "")" data-toggle="tab" href="#">
                        <span class="step">5</span>
                        <span class="title">Completed</span>
                    </a>
                </li>
            </ul>
        </div>
    </div>
</div>